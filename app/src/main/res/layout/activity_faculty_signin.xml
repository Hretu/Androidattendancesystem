<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacultySignin">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tvFacultyEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            />
        <EditText
            android:id="@+id/etFacultyEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="example@example.com"
            android:layout_toEndOf="@+id/tvFacultyEmail"

            />
        <TextView
            android:id="@+id/tvFacultyPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:layout_below="@+id/tvFacultyEmail"

            />
        <EditText
            android:id="@+id/etFacultyPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="*********"
            android:layout_toEndOf="@+id/tvFacultyPassword"
            android:layout_below="@+id/etFacultyEmail"
            />

    </RelativeLayout>

</LinearLayout>